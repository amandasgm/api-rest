{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2024",                                  
    "lib": ["ES2024"],                                   

    /* Modules */
    "module": "nodenext",     
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true                             
  }
}
